{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "npm-run-all build -p ui-dev-webpack ui-dev-server",
    "ui-dev-webpack": "webpack-dev-server --mode=development --progress --hot",
    "ui-dev-server": "babel-node ui-dev/server.js",
    "diff": "lerna diff",
    "updated": "babel-node build.js && lerna updated && babel-node build.js --clean",
    "pub": "yarn lint && yarn test && babel-node build.js && lerna publish && babel-node build.js --clean",
    "build": "babel-node build.js",
    "clean": "babel-node build.js --clean",
    "lint": "markdownlint README.md docs packages -i node_modules -c .mdlintrc.json && eslint build.js babel.config.js packages && flow",
    "test": "babel-node build.js && cross-env USE_PROCESS_CWD_FOR_APP_ROOT=truthy jest --testPathIgnorePatterns packages/*/*.test.js && babel-node build.js --clean",
    "precommit": "yarn clean && yarn lint && yarn test"
  },
  "dependencies": {
    "@material-ui/core": "^1.4.1",
    "@material-ui/icons": "^2.0.0",
    "@sharyn/util": "^1.0.0",
    "app-root-path": "^2.1.0",
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/node": "^7.0.0-beta.54",
    "@babel/plugin-proposal-do-expressions": "^7.0.0-beta.54",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0-beta.54",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.54",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0-beta.54",
    "@babel/plugin-transform-flow-comments": "^7.0.0-beta.54",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-flow": "^7.0.0-beta.54",
    "@babel/preset-react": "^7.0.0-beta.54",
    "@sharyn/babel-preset": "^2.1.2",
    "@sharyn/eslint-config": "^2.0.3",
    "@sharyn/prettier-config": "^1.0.3",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-flow-react-proptypes": "^24.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.77.0",
    "flow-copy-source": "^2.0.2",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lerna": "^3.0.0-rc.0",
    "markdownlint": "^0.11.0",
    "markdownlint-cli": "^0.11.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "prop-types": "^15.6.2",
    "rimraf": "^2.6.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  }
}
